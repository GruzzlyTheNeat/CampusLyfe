<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            tools:context=".fragment.main.ProfilFragment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/eeeee">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="@string/profil"
                android:textColor="@color/black"
                android:textSize="46sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider_overview"
                android:layout_width="200dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/incehat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/eeeee"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_person_24"
                    app:civ_border_color="@color/eeeee"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/eeeee"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvAdProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Ad Soyad"
                        android:textSize="24dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tvBolumProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Bölüm"
                        android:textSize="24dp"
                        android:textColor="@color/black"

                        />




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/eeeee"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/tvBilgiProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilgi"
                    android:textSize="24dp"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:id="@+id/tvBilgiGiris"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:text="Bilgilerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr"
                    android:textSize="24dp"
                    android:textColor="@color/black"

                    />


            </LinearLayout>

            <Button
                android:id="@+id/btProfilGuncelle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lightblue"
                android:text="@string/profi_update"
                android:textColor="@color/black" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</layout>


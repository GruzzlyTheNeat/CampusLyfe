<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/eeeee"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="120dp"
            android:layout_marginHorizontal="24dp"
            tools:context=".fragment.profil.ProfilFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="@string/profil"
                android:textColor="@color/black"
                android:textSize="46sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider_overview"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/incehat" />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:backgroundTint="@color/lightblue"
                app:cardCornerRadius="10dp"


                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/eeeee"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp"

                    >
            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content"

                android:background="@color/eeeee"
                android:orientation="horizontal"

                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_baseline_person_24"
                    app:civ_border_color="@color/eeeee" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/eeeee"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        style="@style/Typography.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Ad Soyad"
                        android:textColor="@color/darkblue"

                        ></TextView>

                    <TextView
                        android:id="@+id/tvAdProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Damla Çekiç "
                        android:textColor="@color/black"
                        style="@style/Typography" />
                    <TextView
                        style="@style/Typography.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Bölüm"
                        android:textColor="@color/darkblue"

                        ></TextView>

                    <TextView
                        android:id="@+id/tvBolumProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Bilgisayar Mühendisliği"
                        style="@style/Typography"

                        />


                </LinearLayout>


            </LinearLayout>

                </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/eeeee"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvBilgiProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilgi"
                    android:textColor="@color/darkblue"

                    style="@style/Typography.Bold"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvBilgiGiris"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    style="@style/Typography"

                    />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <Button
                android:id="@+id/btProfilGuncelle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lightblue"
                android:text="@string/profi_update"
                android:textColor="@color/black" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</layout>


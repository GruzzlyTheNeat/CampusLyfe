<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eeeee"
    tools:context=".fragment.food.FoodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        tools:context=".fragment.main.MainFragment">

        <TextView
            style="@style/Typography.Bold.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Yemekhane" />

        <View
            android:id="@+id/divider_overview"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/incehat" />

        <TextView
            android:id="@+id/textView2"
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Yemekhane Seçiniz" />

        <TextView
            android:id="@+id/textView3"
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Gün Seçiniz" />

        <TextView
            android:id="@+id/textView4"
            style="@style/Typography.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:padding="10dp"
            android:text="Yemek Gelsin!"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView5"
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Sabah: \n"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Öğlen: \n"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView7"
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Akşam: \n"
            android:textAlignment="center"
            android:visibility="gone" />


    </LinearLayout>
</FrameLayout>
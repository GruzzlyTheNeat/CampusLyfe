<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.campuslyfe.model.Etkinlik" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button">

        <ImageView
            android:id="@+id/etkinlikImage"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textEtkinlikAd"
            style="@style/Typography.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{item.etkinlikAd}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/etkinlikImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Etkinlik 1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>